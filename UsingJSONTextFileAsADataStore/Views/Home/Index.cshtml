@model UsingJSONTextFileAsADataStore.Models.Person[]

<div class="row section">
    <form class="col s12" method="post" action="/Home/Add">
        <div class="row">
            <div class="input-field col s12 m6">
                <input id="name" name="name" type="text" class="validate">
                <label for="name">Name</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="age" name="age" type="text" class="validate">
                <label for="age">Age</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 right-align">
                <input type="submit" value="add" class="btn">
            </div>
        </div>
    </form>
</div>

<div class="row section">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Age</td>
                    <td>
                        <a class="btn delete-person" data-id="@person.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form id="delete-form" method="post" action="/Home/Delete">
        <input id="person-id-for-delete" name="id" type="hidden" value="" />
    </form>
</div>

@section scripts{
    <script src="/Scripts/Index.js"></script>
}